<%= bootstrap_form_with model: @organization do |form| %>
  <div class="form-group">
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :site, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Organization", class: "btn btn-primary" %>
  </div>
<% end %>

